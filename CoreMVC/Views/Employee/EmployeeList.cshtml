@model EmployeeVM
@{
    ViewData["Title"] = "EmployeeList";
}

<h1>Calisan Listesi</h1>

<div class="row">
    @if (Model.Employees.Count==0)
    {
        <div>Calisan bulunmamaktadir. Calisan Eklemek icin lutfen <a asp-action="AddEmployee" asp-controller="Employee">tiklayin.</a></div>
    }
    else
    {
        <a class="btn btn-success" asp-action="AddEmployee" asp-controller="Employee">Calisan Ekle</a>
      <table class="table table-hover">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Rol</th>
                <th colspan="2">ISLEMLER</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Employee item in Model.Employees)
            {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.UserRole</td>
                    <td><a class="btn btn-warning" asp-action="UpdateEmployee" asp-controller="Employee" asp-route-id="@item.ID">Guncelle</a></td>
                    <td><a class="btn btn-danger" asp-action="DeleteEmployee" asp-controller="Employee" asp-route-id="@item.ID">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
    }
</div>

